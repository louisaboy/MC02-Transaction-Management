<html>
    <head>
        <title>MC02 Transactions</title>
        <link rel="stylesheet" href="css\style.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body>
        <h1>MC02 Transaction Management</h1>
        <table>
            <thead>
                <tr>
                    <th id="title">Title</th>
                    <th id="year">Year</th>
                    <th id="rank">Rank</th>
                    <th id="Actions">Actions</th>
                </tr>
            </thead>
                <tbody>
                {{#each movies}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{year}}</td>
                        <td>{{rank}}</td>
                        <td>
                        <a href="/edit-movie/{{id}}"><button id="edit-button">Edit</button></a>
                        <a href="/delete-movie/{{id}}-{{year}}"><button id="delete-button">Delete</button></a>
                        </th>
                    </tr>
                {{else}}
                    <p>No movies to display</p>
                {{/each}}
                </tbody>
        </table>
        <br>
        <script >
            {{#times iterator endlingLink}}
            <a class="selectedLink" href="/?page=">{{@index}}</a>
        </script id="page-template" type="text/x-handlebars-template">
        <a href="/add-movie"><button id="add-movie" >Add Movie</button></a>
    </body>
    
</html>
<script>
    Handlebars.registerHelper("times", function (person) {
        return [person.firstName, person.lastName].join(" ");
    });
    $(document).ready(function(){
        var source = $("#page-template").html();
        var template = Handlebars.compile(source);
        var person = {
            firstName: "Joe",
            lastName: "Last"
        };
        var html = template(person);
        $(document.body).html(html);
        
    });
</script>

